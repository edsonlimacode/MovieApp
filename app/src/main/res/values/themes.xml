<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.FlixApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/color_default</item>
        <item name="colorPrimaryVariant">@color/color_default</item>
        <item name="android:textColor">@color/dark_900</item>

        <item name="colorSecondary">@color/color_default</item>
        <item name="colorSecondaryVariant">@color/color_default</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="Theme.FlixApp" parent="Base.Theme.FlixApp" />

    <style name="ThemeToolbarSimpleSearchView">
        <item name="android:textColorPrimary">#212121</item>
    </style>

    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/urbanist_700</item>
    </style>

    <style name="ShapeRoundedImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- TELA VER TODOS -->
    <style name="SearchViewTheme">
        <item name="colorSecondary">#212121</item>
        <item name="searchBackground">@color/white</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="hintColor">#33212121</item>
        <item name="backIconTint">#212121</item>
        <item name="android:textColor">#212121</item>
        <item name="iconsTint">#212121</item>
    </style>

    <!--TELA DE BUSCA-->
    <style name="SearchViewThemeScreen" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorControlNormal">#BDBDBD</item>
        <item name="android:textColorHint">#BDBDBD</item>
        <item name="android:editTextColor">#212121</item>
        <item name="android:fontFamily">@font/urbanist_400</item>
        <item name="android:textSize">14sp</item>
        <item name="colorControlActivated">#212121</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

    <!--DIALOG DA TELA DE DOWNLOAD-->
    <style name="CustomAlertDialog" parent="Theme.Material3.DayNight.Dialog.MinWidth">
        <item name="android:windowBackground">@drawable/bg_dialog</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <!--CAMPO EMAIL PERFIL-->
    <style name="EmailDisabledField" parent="Base.Theme.FlixApp">
        <item name="backgroundTint">@color/dark_300</item>
        <item name="android:fontFamily">@font/urbanist_700</item>
        <item name="android:textColorHint">@color/dark_400</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PopUpSelectGenreProfile" parent="Base.Theme.FlixApp">
        <item name="android:popupBackground">@color/dark_300</item>
        <item name="android:fontFamily">@font/urbanist_700</item>
        <item name="android:textColor">@color/dark_900</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>