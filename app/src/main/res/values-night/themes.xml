<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.FlixApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/color_default</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/dark_950</item>
        <item name="android:textColor">@color/dark_300</item>

    </style>

    <!--Toolbar-->
    <style name="ToolbarTitleAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:titleTextColor">@color/dark_300</item>
        <item name="android:fontFamily">@font/urbanist_700</item>
    </style>

    <!-- TELA VER TODOS -->
    <style name="SearchViewTheme">
        <item name="colorSecondary">#212121</item>
        <item name="searchBackground">@color/dark_900</item>
        <item name="android:inputType">text</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="hintColor">#33212121</item>
        <item name="backIconTint">@color/dark_400</item>
        <item name="android:textColor">@color/dark_300</item>
        <item name="iconsTint">@color/dark_400</item>
    </style>

    <!--CAMPO EMAIL PERFIL-->
    <style name="EmailDisabledField" parent="Base.Theme.FlixApp">
        <item name="backgroundTint">#121212</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/urbanist_700</item>
    </style>

    <style name="PopUpSelectGenreProfile" parent="Base.Theme.FlixApp">
        <item name="android:popupBackground">@color/dark_900</item>
        <item name="android:fontFamily">@font/urbanist_700</item>
        <item name="android:textColor">@color/dark_300</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>