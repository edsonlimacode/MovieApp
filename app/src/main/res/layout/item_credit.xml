<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:paddingBottom="16dp"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgPerson"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:shapeAppearance="@style/ShapeRoundedImage"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"
        android:src="@drawable/movie"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/urbanist_700"
        app:layout_constraintStart_toEndOf="@+id/imgPerson"
        app:layout_constraintTop_toTopOf="@+id/imgPerson"
        tools:text="John jhones" />

    <TextView
        android:id="@+id/textDepartament"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#979797"
        app:layout_constraintStart_toStartOf="@+id/textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/textPersonName"
        tools:text="Ator" />

</androidx.constraintlayout.widget.ConstraintLayout>